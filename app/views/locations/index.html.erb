<h1>Your business locations:</h1>

<div>
  <h3>Filter locations by state:</h3>
  <%= form_tag("/locations", method: "get") do %>
    <%= select_tag :state, options_for_select(us_states), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>

<% if !params[:state].blank? %>
  <% @locations = @business.locations.where(state: params[:state]) %>
<ul>
<% @locations.each do |location| %>
  <h3><li><%= link_to location.name, location_path(location) %></li></h3>
  <%= location.address %>
<% end %>
</ul>
<%else%>
<ul>
<% @business.locations.each do |location| %>
  <h3><li><%= link_to location.name, location_path(location) %></li></h3>
  <%= location.address %>
<% end %>
</ul>
<%end%>

<%= link_to "Add a new location", new_location_path %><br />

<%= link_to('Logout', logout_path, method: :post)%>
